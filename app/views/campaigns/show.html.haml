
= link_to 'Ajouter des joueurs', new_campaign_player_path( @campaign ), class: 'mt-2 btn btn-light btn-lg', role: 'button', 'aria-disabled' => 'true'

%hr

%p
  %b Créateur:
  = @campaign.user.name
%p
  %b Nom de la campagne:
  = @campaign.name
%p
  %b Joueurs:
  - @players.each do |player|
    -if player.user.id == @current_user.id
      = link_to player.user.name, campaign_player_path( @campaign, player.id )
    - else
      = player.user.name

%table.table
  %thead
    %tr
      %th Log
      %th

  %tbody
    - @logs.each do |log|
      %tr
        %td= log.data
        %td= l( log.updated_at.localtime, format: :long ).capitalize

= will_paginate( @logs, previous_label: 'Log précédent', next_label: 'Log suivant', renderer: WillPaginate::ActionView::BootstrapLinkRenderer )




