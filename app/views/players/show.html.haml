  .row

    .col-3
      %button.btn.btn-secondary.btn-block{ type: :button }
        Joueur
        %span.badge.badge-light
          = @player.user.name

    .col-3
      %button.btn.btn-secondary.btn-block{ type: :button }
        PP
        -#%span.badge.badge-light
        -#  = @player.pp

    .col-3
      = f.number_field :pp, class: 'form-control'

    .col-3
      = f.submit 'Enregistrer', class: 'btn btn-secondary btn-block'

