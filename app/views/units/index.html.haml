%h1 Liste des unités de la bande

%table.table
  %thead
    %tr
      %th Nombre
      %th Unité
      %th Points
      -#%th
      -#%th
      %th

  %tbody
    - @units.each do |unit|
      %tr
        %td= unit.amount
        %td= I18n.t( "units.#{unit.libe}" )
        %td= unit.points
        -#%td= link_to 'Show', unit
        %td= link_to 'Modifier', edit_unit_path(unit)
        %td= link_to 'Supprimer', unit, method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer cette unité ?' }

%br

= link_to 'Ajouter une unité', new_gang_unit_path( @gang ), class: 'btn btn-light btn-lg', role: 'button', 'aria-disabled' => 'true'
