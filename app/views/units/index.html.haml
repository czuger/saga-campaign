%h1 Listing units

%table
  %thead
    %tr
      %th Gang
      %th Libe
      %th Amount
      %th Points
      %th
      %th
      %th

  %tbody
    - @units.each do |unit|
      %tr
        %td= unit.gang
        %td= unit.libe
        %td= unit.amount
        %td= unit.points
        %td= link_to 'Show', unit
        %td= link_to 'Edit', edit_unit_path(unit)
        %td= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Unit', campaign_gang_units_path( @campaign, @gang )
