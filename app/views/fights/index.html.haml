= link_to( 'Lancer un combat', new_campaign_fight_path( @campaign ),
          class: 'mt-3 btn btn-secondary', role: 'button', 'aria-disabled' => 'true' )

%hr

%h2 Liste des combats

%table.table
  %thead
    %tr
      %th Lieu

      %th Attaquant
      %th Défenseur

      %th Date

  %tbody
    - @fights.each do |f|
      %tr
        %td= f.location

        -# Required while first test campaign still running
        - if Object.const_defined?( 'GameRules::FightAttackCountPoints' )
          %td= participant_libe( f.fight_data[:attacker], f.fight_data[:attacking_gang_no] )
          %td= participant_libe( f.fight_data[:defender], f.fight_data[:defending_gang_no] )
        -else
          %td Données non disponibles
          %td Données non disponibles

        %td= link_to( l( f.updated_at.localtime, format: :long ).capitalize, campaign_fight_path( @campaign, f ),
          class: 'btn btn-secondary btn-sm', role: 'button', 'aria-disabled' => 'true' )