= form_for @gang do |f|
  - if @gang.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gang.errors.count, "error")} prohibited this gang from being saved:"
      %ul
        - @gang.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :campaign
    = f.text_field :campaign
  .field
    = f.label :player
    = f.text_field :player
  .field
    = f.label :icon
    = f.text_field :icon
  .actions
    = f.submit 'Save'
